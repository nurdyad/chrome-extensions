{
    "manifest_version": 3,
    "name": "BetterLetter Data Extractor",
    "version": "1.0",
    "description": "Extracts table data from BetterLetter and allows easy copying.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*.betterletter.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
