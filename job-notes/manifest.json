{
  "name": "Job Notes Tooltip",
  "description": "Add sticky notes to job rows on the admin dashboard.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "identity"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
