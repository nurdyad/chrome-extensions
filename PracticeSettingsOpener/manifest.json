{
    "manifest_version": 3,
    "name": "Practice Settings Opener",
    "version": "1.0",
    "description": "Opens the correct practice settings page in BetterLetter.",
    "permissions": ["tabs", "scripting", "alarms", "storage", "webNavigation"],
    "host_permissions": ["https://app.betterletter.ai/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    }
  }